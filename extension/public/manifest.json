
{
  "manifest_version": 3,
  "name": "Storage_Extension",
  "version": "1.0",
  "description": "Uma descrição da minha extensão.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "assets/background.js",
    "scripts": ["assets/browser-polyfill.js", "assets/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["assets/browser-polyfill.js", "assets/contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}

