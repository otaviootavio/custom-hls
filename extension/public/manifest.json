{
  "manifest_version": 3,
  "name": "Hashchain Storage",
  "version": "1.0",
  "description": "This extension allows you to store hashchains and interact with them.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*/*"],
  "background": {
    "scripts": ["assets/browser-polyfill.js", "assets/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["assets/browser-polyfill.js", "assets/contentScript.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "index.html"
  }
}